{% extends '/base.html.twig' %}

{% block title %}Liste des articles / Admin {% endblock %}

{% block body %}

{% set new = path('admin_create') %}

<div class="example-wrapper">
</br>
    <h1>Liste des Articles / Admin</h1>
    <br/>
    <div class="col-3"><a href="{{new}}" class='btn btn-success'><i class="fas fa-plus-circle"></i>
        Créer un Continent</a>
    </div>
    <br/>

        <table class="table table-striped"> 
            <thead>      
                <tr>
                    <th>Numéro</th>
                    <th>Libellé</th>
                    <th >Description</th>
                    <th>Prix</th>
                    <th>Action</th>
                </tr>
            </thead>
        {% for article in articles  %}

            <tbody>
                <tr class="table-active">
                    <td> {{article.id}}</td>
                    <td > {{article.libelle}}</td>
                    <td > {{article.description}}</td>
                    <td> {{article.prix}} € </td>
                    <td>
                        <a href="{{path('admin_edit', {'libelle': article.libelle})}}" class='btn btn-primary'><i class="fas fa-pen"></i></a>
                        <a href="{{path('admin_delete', {'libelle': article.libelle})}}" onclick="return confirm('Etes-vous sûre de supprimer l'article : {{article.libelle}} ?` )"><i class="far fa-trash-alt"></i></a>
                    </td>    
                </tr>
            </tbody>

        {% endfor %}     
    </table>
</div>

{% endblock %}
